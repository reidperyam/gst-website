---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import GoogleAnalytics from '../components/GoogleAnalytics.astro';
import SpeedInsights from '@vercel/speed-insights/astro';
import '../styles/global.css';

interface Props {
    title: string;
    description?: string;
}

const isProduction = import.meta.env.PROD;
const { title, description = 'Global Strategic Technologies - Technology Advisory & Execution' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <title>{title} | GST</title>

        <!-- Favicons and Icons -->
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="apple-touch-icon" href="/images/apple-touch-icon.png" />
        <link rel="manifest" href="/site.webmanifest" />

        <!-- Theme Colors -->
        <meta name="theme-color" content="#05cd99" media="(prefers-color-scheme: light)" />
        <meta name="theme-color" content="#05cd99" media="(prefers-color-scheme: dark)" />

        <!-- Preconnect to Google Analytics to reduce critical path latency -->
        <link rel="preconnect" href="https://www.googletagmanager.com" />
        <link rel="dns-prefetch" href="https://www.google-analytics.com" />

        <!-- Initialize theme synchronously to prevent FOUC and race conditions in E2E tests -->
        <script is:inline>
            try {
                const theme = localStorage.getItem('theme');
                if (theme === 'dark') {
                    document.documentElement.classList.add('dark-theme');
                }
            } catch (e) {
                // localStorage not available (e.g., private browsing)
                // Default to light theme silently
            }
        </script>

        <GoogleAnalytics />
    </head>
    <body>
        <Header />
        <main>
            <slot />
        </main>
        <Footer />
        {isProduction && <SpeedInsights />}
    </body>
</html>
