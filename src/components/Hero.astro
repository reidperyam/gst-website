---
interface Props {
    title: string;
    subtitle?: string;
    description: string;
    highlightText?: string;
    primaryCTA?: {
        text: string;
        href: string;
    };
    secondaryCTA?: {
        text: string;
        href: string;
    };
    trustLine?: string;
}

const {
    title,
    subtitle,
    description,
    highlightText,
    primaryCTA,
    secondaryCTA,
    trustLine
} = Astro.props;

// Helper function to split text and highlight specific portions
function renderHighlightedText(text: string, highlight?: string) {
    if (!highlight) return [text];
    const regex = new RegExp(`(${highlight})`, 'gi');
    return text.split(regex);
}
---

<section class="hero">
    <div class="container">
        <div class="hero-layout">
            <h1>
                <span class="line">
                    {highlightText ? (
                        renderHighlightedText(title, highlightText).map((part: string, index: number) =>
                            part.toLowerCase() === highlightText.toLowerCase() ? (
                                <span key={index} class="highlight">{part}</span>
                            ) : (
                                part
                            )
                        )
                    ) : (
                        title
                    )}
                </span>
                {subtitle && <span class="line"><span class="accent">{subtitle}</span></span>}
            </h1>

            <div class="hero-content">
                <div>
                    <p>
                        {highlightText ? (
                            renderHighlightedText(description, highlightText).map((part: string, index: number) =>
                                part.toLowerCase() === highlightText.toLowerCase() ? (
                                    <span key={index} class="highlight">{part}</span>
                                ) : (
                                    part
                                )
                            )
                        ) : (
                            description
                        )}
                    </p>
                </div>
                <div class="hero-action">
                    {(primaryCTA || secondaryCTA) && (
                        <div class="cta-group">
                            {primaryCTA && (
                                <a href={primaryCTA.href} class="cta-button primary">
                                    {primaryCTA.text}
                                </a>
                            )}
                            {secondaryCTA && (
                                <a href={secondaryCTA.href} class="cta-button secondary">
                                    {secondaryCTA.text}
                                </a>
                            )}
                        </div>
                    )}
                    {trustLine && (
                        <p class="trust-line">{trustLine}</p>
                    )}
                </div>
            </div>
        </div>
    </div>
</section>
