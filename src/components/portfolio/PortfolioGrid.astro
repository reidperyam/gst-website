---
import type { Project } from '../../types/portfolio';
import ProjectModal from './ProjectModal.astro';

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;
---

<div class="portfolio-grid-container">
  <div class="container">
    <div class="grid" data-testid="portfolio-grid">
      {projects.map((project) => (
        <div class="project-card" data-project-id={project.id} data-testid="project-card" role="button" tabindex="0">
          <div class="card-header">
            <div>
              <h3 class="project-title">{project.codeName}</h3>
              <p class="project-industry">{project.industry}</p>
            </div>
            <div class="year-badge">{project.year}</div>
          </div>

          <div class="metrics">
            <div class="metric">
              <div class="metric-label">ARR</div>
              <div class="metric-value arr">
                {project.arr === 'Not in source' ? '--' : project.arr}
              </div>
            </div>
            <div class="metric">
              <div class="metric-label">Stage</div>
              <div class="metric-value">{project.growthStage}</div>
            </div>
          </div>

          <p class="summary">{project.summary}</p>

          <div class="tags">
            <div class="tag theme">{project.theme}</div>
          </div>

          <button class="cta-button" aria-label={`View details for ${project.codeName}`} data-testid={`project-card-cta-${project.id}`}>
            View Project Details
          </button>
        </div>
      ))}
    </div>
  </div>

  <!-- Project Details Modal -->
  <ProjectModal />
</div>

<style>
  .portfolio-grid-container {
    background: #ffffff;
    padding: 2rem 0 4rem 0;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 1.5rem;
  }

  .no-results-message {
    grid-column: 1 / -1;
    padding: 3rem 1.5rem;
    text-align: center;
    color: rgba(26, 26, 26, 0.65);
    font-size: 1rem;
  }

  :global(html.dark-theme) .no-results-message {
    color: rgba(200, 200, 200, 0.65);
  }

  .project-card {
    background: #ffffff;
    border: 1px solid rgba(26, 26, 26, 0.1);
    padding: 1.5rem;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    display: flex;
    flex-direction: column;
    z-index: 1;
  }

  .project-card:hover {
    box-shadow: 0 10px 30px rgba(5, 205, 153, 0.15);
    transform: translateY(-4px);
    border-color: #05cd99;
  }

  .project-card:focus-visible {
    outline: 2px solid #05cd99;
    outline-offset: 2px;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
    gap: 1rem;
  }

  .project-title {
    font-weight: 900;
    font-size: 1.25rem;
    color: rgba(26, 26, 26, 0.95);
    margin: 0 0 0.25rem 0;
    letter-spacing: -0.01em;
    line-height: 1.3;
  }

  .project-industry {
    font-size: 0.8125rem;
    color: rgba(26, 26, 26, 0.6);
    margin: 0;
    font-weight: 500;
  }

  .year-badge {
    background: rgba(26, 26, 26, 0.05);
    color: rgba(26, 26, 26, 0.7);
    padding: 0.35rem 0.75rem;
    border-radius: 0;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    white-space: nowrap;
  }

  .metrics {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin: 1rem 0;
    padding: 1rem;
    background: rgba(26, 26, 26, 0.02);
    border-left: 3px solid #05cd99;
  }

  .metric {
    display: flex;
    flex-direction: column;
  }

  .metric-label {
    font-size: 0.65rem;
    color: rgba(26, 26, 26, 0.55);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: 0.35rem;
    font-weight: 700;
  }

  .metric-value {
    font-size: 1rem;
    font-weight: 700;
    color: rgba(26, 26, 26, 0.9);
    letter-spacing: -0.01em;
  }

  .metric-value.arr {
    color: #05cd99;
    font-size: 1.125rem;
  }

  .summary {
    font-size: 0.875rem;
    color: rgba(26, 26, 26, 0.7);
    line-height: 1.6;
    margin: 1rem 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin: 1rem 0;
  }

  .tag {
    background: rgba(5, 205, 153, 0.1);
    color: #05cd99;
    padding: 0.35rem 0.75rem;
    border-radius: 0;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .tag.theme {
    background: rgba(5, 205, 153, 0.15);
    color: #05cd99;
  }

  .cta-button {
    width: 100%;
    padding: 0.875rem 1rem;
    background: transparent;
    color: #05cd99;
    border: 2px solid #05cd99;
    cursor: pointer;
    font-size: 0.8rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-family: 'Helvetica Neue', Arial, sans-serif;
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    margin-top: auto;
  }

  .cta-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: #05cd99;
    transition: left 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: -1;
  }

  .cta-button:hover::before {
    left: 0;
  }

  .cta-button:hover {
    color: #ffffff;
  }

  .cta-button:focus-visible {
    outline: 2px solid #05cd99;
    outline-offset: 2px;
  }

  .cta-button:active {
    transform: scale(0.98);
  }

  /* Dark theme */
  :global(html.dark-theme) .portfolio-grid-container {
    background: #0a0a0a;
  }

  :global(html.dark-theme) .project-card {
    background: #1a1a1a;
    border-color: rgba(5, 205, 153, 0.2);
  }

  :global(html.dark-theme) .project-card:hover {
    border-color: #05cd99;
    box-shadow: 0 10px 30px rgba(5, 205, 153, 0.2);
  }

  :global(html.dark-theme) .project-title {
    color: rgba(245, 245, 245, 0.95);
  }

  :global(html.dark-theme) .project-industry {
    color: rgba(200, 200, 200, 0.7);
  }

  :global(html.dark-theme) .year-badge {
    background: rgba(5, 205, 153, 0.1);
    color: rgba(200, 200, 200, 0.8);
  }

  :global(html.dark-theme) .metrics {
    background: rgba(5, 205, 153, 0.05);
    border-left-color: #05cd99;
  }

  :global(html.dark-theme) .metric-label {
    color: rgba(200, 200, 200, 0.6);
  }

  :global(html.dark-theme) .metric-value {
    color: rgba(245, 245, 245, 0.95);
  }

  :global(html.dark-theme) .metric-value.arr {
    color: #05cd99;
  }

  :global(html.dark-theme) .summary {
    color: rgba(200, 200, 200, 0.8);
  }

  :global(html.dark-theme) .tag {
    background: rgba(5, 205, 153, 0.15);
    color: #05cd99;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .grid {
      grid-template-columns: 1fr;
    }

    .container {
      padding: 0 1rem;
    }

    .project-title {
      font-size: 1.125rem;
    }

    .metrics {
      gap: 0.75rem;
    }

    .cta-button {
      padding: 0.75rem 0.875rem;
      font-size: 0.75rem;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 0.75rem;
    }

    .portfolio-grid-container {
      padding: 1rem 0 2rem 0;
    }

    .grid {
      gap: 1rem;
    }

    .project-card {
      padding: 1rem;
    }

    .card-header {
      margin-bottom: 0.75rem;
    }

    .project-title {
      font-size: 1rem;
    }

    .metrics {
      margin: 0.75rem 0;
      padding: 0.75rem;
      gap: 0.5rem;
    }

    .metric-value {
      font-size: 0.9rem;
    }

    .metric-value.arr {
      font-size: 1rem;
    }

    .summary {
      font-size: 0.8125rem;
      margin: 0.75rem 0;
    }

    .cta-button {
      padding: 0.65rem 0.75rem;
      font-size: 0.7rem;
      margin-top: 0.75rem;
    }
  }


  @media (max-width: 768px) {
    .project-modal {
      width: 95%;
      padding: 1.5rem;
      max-height: 90vh;
    }

    .modal-close {
      top: 1rem;
      right: 1rem;
      padding: 0.65rem;
    }

    .modal-metrics {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .modal-title {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .project-modal {
      width: 100%;
      padding: 1.25rem;
      max-height: 95vh;
    }

    .modal-close {
      top: 0.75rem;
      right: 0.75rem;
      padding: 0.6rem;
      min-width: 40px;
      min-height: 40px;
    }

    .modal-title {
      font-size: 1.25rem;
    }

    .modal-metrics {
      grid-template-columns: 1fr;
      margin-bottom: 1rem;
      padding-bottom: 1rem;
    }
  }
</style>

<script is:inline define:vars={{ projectsData: JSON.stringify(projects) }}>
  // Initialize global state if not already done
  if (!window.portfolioState) {
    let allProjects = [];
    try {
      allProjects = JSON.parse(projectsData);
    } catch (e) {
      console.error('Failed to parse projects data:', e);
      allProjects = [];
    }

    window.portfolioState = {
      allProjects: allProjects,
      filteredProjects: [],
      filters: { search: '', stage: 'all', theme: 'all', year: 'all' },
      growthStages: [],
      matureStages: []
    };
  }

  let allProjects = window.portfolioState.allProjects;

  function openProjectModal(projectId) {
    // Use ProjectModal component's open function
    window.projectModal.open(projectId, window.portfolioState.allProjects);
  }

  function trackFilterApplication(filterType, filterValue) {
    // Track filter actions in analytics
    if (window.gtag) {
      window.gtag('event', 'filter_applied', {
        event_category: 'portfolio',
        filter_type: filterType,
        filter_value: filterValue
      });
    }
  }

  function initPortfolioGrid() {
    const cards = document.querySelectorAll('.project-card');

    // Card click handlers
    cards.forEach(card => {
      card.addEventListener('click', () => {
        openProjectModal(card.dataset.projectId);
      });

      card.addEventListener('keydown', (e) => {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          openProjectModal(card.dataset.projectId);
        }
      });
    });

    // CTA button click handlers (same as card click)
    document.querySelectorAll('.cta-button').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        const card = btn.closest('.project-card');
        if (card) {
          openProjectModal(card.dataset.projectId);
        }
      });
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initPortfolioGrid);
  } else {
    initPortfolioGrid();
  }

  // Listen for filter updates and track them
  window.addEventListener('portfolioFiltered', (e) => {
    // Track the filter application
    if (e.detail && e.detail.filterType && e.detail.filterValue) {
      trackFilterApplication(e.detail.filterType, e.detail.filterValue);
    }
    initPortfolioGrid();
  });

  // Also set up a mutation observer to watch for card visibility changes
  const observer = new MutationObserver(() => {
    // Re-initialize when DOM changes
    const visibleCards = document.querySelectorAll('.project-card:not([style*="display: none"])');
    if (visibleCards.length > 0) {
      setTimeout(() => initPortfolioGrid(), 100);
    }
  });

  const gridContainer = document.querySelector('.grid');
  if (gridContainer) {
    observer.observe(gridContainer, {
      attributes: true,
      attributeFilter: ['style'],
      subtree: true,
      childList: true
    });
  }
</script>
