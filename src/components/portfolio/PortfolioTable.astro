---
import type { Project } from '../../types/portfolio';

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;
---

<div class="portfolio-table-container">
  <div class="container">
    <table class="portfolio-table">
      <caption class="sr-only">Portfolio of 51 strategic advisory and implementation projects</caption>
      <thead>
        <tr>
          <th class="sortable" data-column="codeName">PROJECT</th>
          <th class="sortable" data-column="theme">THEME</th>
          <th>SUMMARY</th>
          <th class="sortable" data-column="arr">ARR</th>
          <th class="sortable" data-column="growthStage">GROWTH STAGE</th>
          <th class="sortable" data-column="year">YEAR</th>
          <th>TECHNOLOGIES</th>
        </tr>
      </thead>
      <tbody id="portfolio-tbody">
        {projects.slice(0, 10).map((project) => (
          <tr>
            <td>
              <div class="project-cell">
                <div class="project-title">{project.codeName}</div>
                <div class="project-subtitle">{project.industry}</div>
              </div>
            </td>
            <td><span class="theme-pill">{project.theme}</span></td>
            <td class="summary-cell">{project.summary}</td>
            <td class="arr-cell"><span class="arr-amount">{project.arr}</span></td>
            <td class="stage-cell">{project.growthStage}</td>
            <td class="year-cell">{project.year}</td>
            <td class="tech-cell">
              <div class="tech-tags">
                {project.technologies.map((tech) => (
                  <span class="tech-tag">{tech}</span>
                ))}
              </div>
            </td>
          </tr>
        ))}
      </tbody>
    </table>

    <div class="pagination" id="pagination">
      <button class="pagination-btn" id="prev-btn" disabled aria-label="Go to previous page">← Previous</button>
      <span class="pagination-info">Page <span id="current-page">1</span> of <span id="total-pages">6</span></span>
      <button class="pagination-btn" id="next-btn" aria-label="Go to next page">Next →</button>
    </div>
  </div>
</div>

<style>
  .portfolio-table-container {
    padding: 2rem 0 4rem 0;
    background: #f5f5f5;
  }

  .portfolio-table {
    width: 100%;
    border-collapse: collapse;
    background: #ffffff;
    border: 1px solid rgba(26, 26, 26, 0.1);
  }

  .portfolio-table caption {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .portfolio-table thead {
    background: #eeeeee;
    border-bottom: 2px solid #05cd99;
    position: sticky;
    top: 214px;
    z-index: 97;
  }

  .portfolio-table th {
    padding: 1rem 1.5rem;
    text-align: left;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(26, 26, 26, 0.85);
  }

  .portfolio-table th.sortable {
    cursor: pointer;
    user-select: none;
    transition: color 0.2s;
  }

  .portfolio-table th.sortable:hover {
    color: #05cd99;
    text-decoration: underline;
    text-decoration-color: #05cd99;
    text-underline-offset: 3px;
    text-decoration-thickness: 2px;
  }

  .portfolio-table th:focus-visible {
    outline: 2px solid #05cd99;
    outline-offset: -2px;
  }

  .portfolio-table th.sortable::after {
    content: ' ↕';
    opacity: 0.3;
    font-size: 0.9em;
  }

  .portfolio-table th.sortable.sorted-asc::after {
    content: ' ↑';
    opacity: 1;
    color: #05cd99;
  }

  .portfolio-table th.sortable.sorted-desc::after {
    content: ' ↓';
    opacity: 1;
    color: #05cd99;
  }

  .portfolio-table tbody tr {
    border-bottom: 1px solid rgba(26, 26, 26, 0.1);
    transition: background 0.15s, box-shadow 0.15s;
  }

  .portfolio-table tbody tr:hover {
    background: #f0f0f0;
    box-shadow: inset 0 0 0 1px rgba(5, 205, 153, 0.08);
  }

  .portfolio-table tbody tr:hover .arr-cell {
    background: rgba(5, 205, 153, 0.12);
    transition: background 0.15s;
  }

  .portfolio-table td {
    padding: 1.25rem 1.5rem;
    font-size: 0.875rem;
    vertical-align: top;
    line-height: 1.6;
  }

  .project-cell {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    min-width: 200px;
    padding-left: 0.75rem;
    border-left: 3px solid #05cd99;
  }

  .project-title {
    font-weight: 600;
    color: rgba(26, 26, 26, 0.95);
    font-size: 0.95rem;
    letter-spacing: -0.01em;
  }

  .project-subtitle {
    font-size: 0.8rem;
    color: rgba(26, 26, 26, 0.65);
  }

  .summary-cell {
    max-width: 600px;
    line-height: 1.7;
    color: rgba(26, 26, 26, 0.75);
  }

  .theme-pill {
    display: inline-block;
    padding: 0.375rem 0.875rem;
    background: rgba(5, 205, 153, 0.15);
    color: #05cd99;
    border: 1px solid rgba(5, 205, 153, 0.3);
    font-size: 0.75rem;
    font-weight: 500;
    white-space: nowrap;
    letter-spacing: 0.02em;
    border-radius: 4px;
  }

  .arr-cell {
    min-width: 140px;
    text-align: right;
  }

  .arr-amount {
    font-weight: 700;
    color: #05cd99;
    font-size: 1rem;
    white-space: nowrap;
    letter-spacing: -0.02em;
    padding: 0.25rem 0.5rem;
    background: rgba(5, 205, 153, 0.08);
    border-radius: 3px;
    display: inline-block;
  }

  .stage-cell {
    font-size: 0.875rem;
    color: rgba(26, 26, 26, 0.75);
    white-space: nowrap;
  }

  .year-cell {
    color: rgba(26, 26, 26, 0.75);
    text-align: center;
    font-size: 0.875rem;
    font-weight: 600;
    min-width: 50px;
  }

  .tech-cell {
    min-width: 200px;
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    max-width: 280px;
  }

  .tech-tag {
    padding: 0.25rem 0.625rem;
    background: #f0f0f0;
    color: rgba(26, 26, 26, 0.75);
    border: 1px solid rgba(26, 26, 26, 0.08);
    font-size: 0.7rem;
    font-weight: 500;
    white-space: nowrap;
    border-radius: 3px;
    transition: background 0.15s, color 0.15s;
  }

  .tech-tag:hover {
    background: #e8e8e8;
    color: rgba(26, 26, 26, 0.85);
    cursor: default;
  }

  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-top: 2rem;
    padding: 2rem 0;
  }

  .pagination-btn {
    padding: 0.75rem 1.5rem;
    background: transparent;
    color: #05cd99;
    border: 2px solid #05cd99;
    cursor: pointer;
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-family: monospace;
    transition: all 0.2s;
  }

  .pagination-btn:hover:not(:disabled) {
    background: #05cd99;
    color: #ffffff;
  }

  .pagination-btn:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .pagination-info {
    font-size: 0.875rem;
    font-weight: 600;
    color: rgba(26, 26, 26, 0.85);
  }

  /* Dark theme */
  :global(body.dark-theme) .portfolio-table-container {
    background: #0a0a0a;
  }

  :global(body.dark-theme) .portfolio-table {
    background: #1a1a1a;
    border-color: #2a2a2a;
  }

  :global(body.dark-theme) .portfolio-table thead {
    background: #141414;
  }

  :global(body.dark-theme) .portfolio-table th {
    color: rgba(245, 245, 245, 0.85);
  }

  :global(body.dark-theme) .portfolio-table tbody tr {
    border-bottom-color: #2a2a2a;
  }

  :global(body.dark-theme) .portfolio-table tbody tr:hover {
    background: #1f1f1f;
    box-shadow: inset 0 0 0 1px rgba(5, 205, 153, 0.12);
  }

  :global(body.dark-theme) .portfolio-table tbody tr:hover .arr-cell {
    background: rgba(5, 205, 153, 0.15);
  }

  :global(body.dark-theme) .project-title {
    color: rgba(245, 245, 245, 0.95);
  }

  :global(body.dark-theme) .project-subtitle {
    color: rgba(200, 200, 200, 0.65);
  }

  :global(body.dark-theme) .summary-cell {
    color: rgba(200, 200, 200, 0.75);
  }

  :global(body.dark-theme) .stage-cell {
    color: rgba(200, 200, 200, 0.75);
  }

  :global(body.dark-theme) .year-cell {
    color: rgba(200, 200, 200, 0.75);
  }

  :global(body.dark-theme) .project-cell {
    border-left-color: #05cd99;
  }

  :global(body.dark-theme) .arr-amount {
    background: rgba(5, 205, 153, 0.12);
  }

  :global(body.dark-theme) .tech-tag {
    background: #252525;
    color: rgba(200, 200, 200, 0.75);
    border-color: rgba(255, 255, 255, 0.08);
    transition: background 0.15s, color 0.15s;
  }

  :global(body.dark-theme) .tech-tag:hover {
    background: #2f2f2f;
    color: rgba(245, 245, 245, 0.85);
  }

  :global(body.dark-theme) .pagination-info {
    color: rgba(245, 245, 245, 0.85);
  }

  /* Responsive */
  @media (max-width: 1400px) {
    .summary-cell {
      max-width: 400px;
    }

    .tech-tags {
      max-width: 250px;
    }
  }

  @media (max-width: 1200px) {
    .tech-cell {
      display: none;
    }

    .portfolio-table th:nth-child(7) {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .arr-cell,
    .stage-cell,
    .year-cell {
      display: none;
    }

    .portfolio-table th:nth-child(4),
    .portfolio-table th:nth-child(5),
    .portfolio-table th:nth-child(6) {
      display: none;
    }
  }
</style>
