---
import type { Stat } from '../../types/portfolio';

interface Props {
  stats: Stat[];
}

const { stats } = Astro.props;
---

<div class="portfolio-header">
  <div class="container">
    <div class="portfolio-header-content">
      <div class="portfolio-brand">
        <h1 class="portfolio-title">Select Project Portfolio</h1>
      </div>
      <div class="portfolio-stats">
        {stats.map((stat) => (
          <div class="portfolio-stat">
            <div class="portfolio-stat-value">{stat.value}</div>
            <div class="portfolio-stat-label">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </div>
</div>

<style>
  .portfolio-header {
    background: #f5f5f5;
    border-bottom: 4px solid #05cd99;
    padding: 1.5rem 0;
  }

  .portfolio-header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .portfolio-brand {
    display: flex;
    align-items: center;
  }

  .portfolio-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: rgba(26, 26, 26, 0.95);
    text-transform: uppercase;
    letter-spacing: -0.02em;
    margin: 0;
  }

  .portfolio-stats {
    display: flex;
    gap: 3rem;
    font-size: 0.875rem;
  }

  .portfolio-stat {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }

  .portfolio-stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: #05cd99;
    letter-spacing: -0.02em;
  }

  .portfolio-stat-label {
    font-size: 0.75rem;
    color: rgba(26, 26, 26, 0.65);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  :global(body.dark-theme) .portfolio-header {
    background: #0a0a0a;
    border-bottom-color: #05cd99;
  }

  :global(body.dark-theme) .portfolio-title {
    color: rgba(245, 245, 245, 0.95);
  }

  :global(body.dark-theme) .portfolio-stat-label {
    color: rgba(200, 200, 200, 0.65);
  }

  @media (max-width: 768px) {
    .portfolio-stats {
      display: none;
    }
  }
</style>
