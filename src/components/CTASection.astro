---
interface Props {
    title: string;
    description: string;
    buttonText?: string;
    calendlyUrl?: string;
}

const {
    title,
    description,
    buttonText = "BOOK_CALENDAR_SLOT()",
    calendlyUrl = "https://calendly.com/globalstrategictech"
} = Astro.props;
---

<section class="cta-section" id="contact">
    <div class="container">
        <div class="cta-box">
            <h2>{title}</h2>
            <p>{description}</p>
            <a href={calendlyUrl} target="_blank" rel="noopener noreferrer" class="cta-button">{buttonText}</a>
        </div>
    </div>
</section>
