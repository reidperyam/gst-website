---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import CTASection from '../components/CTASection.astro';
import { trackPageView } from '../utils/analytics';

// Track page view
trackPageView('home', 'technology Advisory & Leadership');
---

<BaseLayout
    title="technology Advisory & Leadership"
    description="value creation, risk management, and business acceleration."
>
    <Hero
        title="technology advisory"
        subtitle="& Leadership"
        description="for value creation, risk management, and business acceleration"
    />

    <CTASection
        title="Let's discuss your next challenge"
        description="Schedule a confidential consultation to discuss your objectives."
        buttonText="BOOK_CALENDAR_SLOT()"
        calendlyUrl="https://calendly.com/globalstrategictech"
    />
</BaseLayout>
