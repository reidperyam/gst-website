---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import WhoWeSupport from '../components/WhoWeSupport.astro';
import WhatWeDo from '../components/WhatWeDo.astro';
import WhyClientsTrustUs from '../components/WhyClientsTrustUs.astro';
import CTASection from '../components/CTASection.astro';
import { trackPageView } from '../utils/analytics';

// Track page view
trackPageView('home', 'technology Advisory & Execution');
---

<BaseLayout
    title="Global Strategic Technology | M&A Strategic Technology Advisory"
    description="Expert strategic technology advisory for M&A buy-side and sell-side technical due diligence, post-acquisition integration, value creation, and platform modernization. Led by Reid Peryam, 20-year veteran in technology strategy execution."
    ogTitle="Global Strategic Technology | Strategic Tech Advisory"
    ogDescription="Specialized technical diligence and AI strategy for organizations navigating complex product transitions."
    ogImage="https://globalstrategic.tech/og-image.jpg"
    ogUrl="https://globalstrategic.tech"
>
    <Hero
        description="We help technology-focused investors, founders, & executives scale with confidence to create value, manage risks and accelerate their business."
        primaryCTA={{
            text: "Schedule an Intro Call",
            href: "https://calendly.com/globalstrategictech"
        }}
        secondaryCTA={{
            text: "View Advisory Services",
            href: "/services"
        }}
        trustLine="Vendor-neutral. Executive-ready outputs. Built for high-stakes decisions."
    />

    <WhoWeSupport />

    <WhatWeDo />

    <WhyClientsTrustUs />

    <CTASection
        title="Let's discuss your next challenge"
        description="Schedule a confidential consultation to discuss your objectives."
        buttonText="Schedule a Consultation"
        calendlyUrl="https://calendly.com/globalstrategictech"
    />
</BaseLayout>
